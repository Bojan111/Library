@model LibraryMVCProjects.Models.BookEditModel
@{
    ViewData["Title"] = "BookDelete";
}


<h3>Are you sure you want to delete Book?</h3>

<div class="row">
    <div class="col-5">
        <table class="table">
            <tr>
                <td class="font-weight-bold">
                    Book Title
                </td>
                <td>
                    @Model.Book.Title
                </td>
            </tr>
        </table>
        <form method="post">
            <input type="hidden" asp-for="Book.Id" />
            <button class="btn btn-danger" type="submit">Delete</button>
            <a class="btn btn-primary" asp-controller="BookMVC" asp-action="Index">Back to List</a>
        </form>

    </div>

</div>